{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es2022", "dom"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "../",
    "incremental": false,
    "noEmit": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
